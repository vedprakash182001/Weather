<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
     {{>link}}

    {{!-- script --}}
    {{>script}}
    <title>Weather</title>
</head>
<body>

    {{!-- navbar  --}}
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_conatainer">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>

            <div class="tempInfromation">
                <div class="top_layer">
                    <p id="day">Monday</p>
                    <p id="time">1:35:34pm</p>
                    <p id="date">1 Aug</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span>0</span>&deg;C</p>
                        <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- footer side -->
    {{>footer}}
    <script src="./JS/main.js"></script>
</body>
</html>